	font-weight: bold;
	font-size: 8px;
    color: blue;  
	text-align: right;
}

::-moz-placeholder {  /* Firefox 19+ */
  font-style: italic;
	font-weight: bold;
	font-size: 8px;
    color: blue;  
	text-align: right;
}

:-ms-input-placeholder {  
    font-style: italic;
	font-weight: bold;
	font-size: 8px;
    color: blue;  
	text-align: right;

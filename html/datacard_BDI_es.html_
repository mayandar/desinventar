legend {
  width:90%;
  border:1px solid #999596;
  text-align:center;
  background:white;
  font-family:Arial, Helvetica, sans-serif; 
  font-size:12px;
  padding-top:3px; 
  padding-bottom:3px;
  
  }

.vertical-divider{
	clear: both;
	position: relative;
	
}
h3 {
	font-size: 16px;
	font-weight:bold;
	margin-bottom:1px;
	padding-bottom:1px;
}

.vertical-divider:after {
	clear: both;
	content: " ";
	display: block;
	height: 0;
	visibility: hidden;
}

.vertical-divider .column:not(:first-child):after, .vertical-divider .columns:not(:first-child):after{
	background: #FFFFFF;
	bottom: 0;
	content: " ";
	margin-left: -10px;
	position: absolute;
	top: 0;
	width: 1px;
}

/* Very simple grid for example */
.container { position: relative; width: 960px; margin: 20px auto; padding: 0; }

.container .column, .container .columns { float: left; display: inline; margin-left: 10px; margin-right: 10px; margin-top:2px;}

.container .one-sixth.column { width: 160px; }

.container .two-sixth.column { width: 300px; }
.container .three-sixth.column { width: 600px; }
.container .four-sixth.column { width: 900px; }

::-webkit-input-placeholder {
    font-style: italic;
	font-weight: normal;
	font-size: 8px;
    color: gray;
	text-align: left;
}

:-moz-placeholder { /* Firefox 18- */

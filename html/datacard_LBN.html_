    <INPUT type="CHECKBOX" name="hay_muertos" VALUE="-1" >
    <input type="button" NAME="ALK" value="&Sigma;" onclick="addLoss(muertos, DEATHS_FEMALE, DEATHS_MALE, hay_muertos);" />
    </fieldset>
  </div> 
  <div class="column one-sixth bss">   
    <fieldset>
    <legend>By sex:</legend>
